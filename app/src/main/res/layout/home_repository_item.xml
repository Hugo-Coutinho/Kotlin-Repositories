<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_repository_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-black"
        android:maxLines="2"
        android:paddingRight="100dp"
        android:text="namenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamenamename"
        android:textColor="@color/colorBlue"
        android:textSize="18sp"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="100sp"
        app:layout_constraintBottom_toTopOf="@id/tv_repository_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_repository_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:maxLines="3"
        android:paddingRight="100dp"
        android:text="descripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripiondescripion"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintBaseline_toBaselineOf="@id/iv_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_repository_name" />

    <ImageView
        android:id="@+id/iv_fork"
        android:layout_width="16dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/fork"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_repository_description" />

    <TextView
        android:id="@+id/tv_fork_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="10175"
        android:textSize="20dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_fork"
        app:layout_constraintTop_toBottomOf="@id/tv_repository_description" />

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="16dp"
        android:layout_height="24dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/star"
        app:layout_constraintLeft_toLeftOf="@id/tv_fork_count"
        app:layout_constraintTop_toBottomOf="@id/tv_repository_description" />

    <TextView
        android:id="@+id/tv_star_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="36642"
        android:textSize="20dp"
        android:paddingHorizontal="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_star"
        app:layout_constraintTop_toBottomOf="@id/tv_repository_description" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autoSizeMaxTextSize="16dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif-black"
        android:lines="2"
        android:text="Felipe Belmino"
        android:textAlignment="center"
        android:textColor="@color/colorBlue"
        android:textSize="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_user"
        app:layout_constraintTop_toBottomOf="@id/iv_user" />

    <Button
        android:id="@+id/btn_github_webView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repository page"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_fork"/>
</androidx.constraintlayout.widget.ConstraintLayout>